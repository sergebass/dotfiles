" vim-like settings

set number
set cursorline

set hlsearch
set incsearch

set tabstop=4
set expandtab
set shiftwidth=4

set textwidth=120
set scrolloff=1

set startnormalmode
set contentassistmode

set clipboard=unnamedplus

nnoremap S :w<CR>
nnoremap Q :q<CR>

nnoremap <C-P> :ChooseEditor<CR>
nnoremap <C-N> :OpenType<CR>

nnoremap \v :vim<CR>

nnoremap \y "+y
nnoremap \p "+p
nnoremap \P "+P

nnoremap \/ :SearchTextInWorkspace<CR>
vnoremap \/ :SearchTextInWorkspace<CR>

nnoremap ]q :GoToNextAnnotation<CR>
nnoremap [q :GoToPreviousAnnotation<CR>

nnoremap <Space>en :GoToNextAnnotation<CR>
nnoremap <Space>ep :GoToPreviousAnnotation<CR>

nnoremap <Space>? :ShowKeyAssist<CR>

nnoremap \<Tab> :ShowInNavigator<CR>

nnoremap \<CR> :SearchReferencesInWorkspace<CR>
vnoremap \<CR> :SearchReferencesInWorkspace<CR>

nnoremap <Space>ss :SearchReferencesInWorkspace<CR>
vnoremap <Space>ss :SearchReferencesInWorkspace<CR>

nnoremap <Space><Space> <Esc>:
nnoremap <Space><Tab> <C-^>
nnoremap <Space>w <C-W>

nnoremap <Space>qq :Exit<CR>
nnoremap <Space>qr :Restart<CR>

nnoremap <Space>fs :w<CR>
nnoremap <Space>fS :wa<CR>
nnoremap <Space>fed :new<CR>:e ~/.vrapperrc<CR>

nnoremap <Space>bb :files<CR>
nnoremap <Space>bd :bd<CR>
nnoremap <Space>bn :bnext<CR>
nnoremap <Space>bp :bprev<CR>
nnoremap <Space>bR :e!
nnoremap <Space>bY gg"+yG
nnoremap <Space>bP ggvG"+p

nnoremap <Space>gb :ShowBlame<CR>

" a shorter alias for mode-specific bindings
nmap <Space>m <CR>

" jumping around
nnoremap <CR><CR> <C-]>
nnoremap <CR>gg <C-]>
" nnoremap <CR>gt <C-]>

nnoremap <BS> <C-O>

nnoremap gO :ShowOutline<CR>
nnoremap \<BS> :ShowOutline<CR>

nnoremap <CR>hh :ShowInformation<CR>
nnoremap K :ShowInformation<CR>

nnoremap <CR>ff :OpenSearchDialog<CR>

nnoremap <CR>hu :SearchReferencesInWorkspace<CR>

" refactoring
nnoremap <CR>ri :OrganizeImports<CR>
nnoremap <CR>rf :QuickFormat<CR>
nnoremap <CR>rr :RenameElement<CR>

" SPC m e b 	open buffer with problems
" SPC m e o 	open buffer with problems
nnoremap <CR>en :GoToNextAnnotation<CR>
nnoremap <CR>ep :GoToPreviousAnnotation<CR>

nnoremap \\T :GoToUnitTest<CR>
nnoremap <CR>tt :RunUnitTest<CR>
nnoremap <CR>td :DebugUnitTest<CR>
nnoremap <CR>tl :RerunLastUnitTest<CR>
nnoremap <CR>tf :RerunFailedUnitTests<CR>

nnoremap <CR>TT :RunPluginUnitTest<CR>
nnoremap <CR>TD :DebugPluginUnitTest<CR>
