    matchcontext = 24 226 bold
    matchselected = 24 226 bold
    selected = 15
    separator = 245

[color "diff"]
    meta = 226 25 bold
    frag = 213 bold ul
    context = 15
    old = 196 strike
    new = 82
    whitespace = 15 18 
    commit = 51 bold

[color "status"]
    header = 7
    added = 82 bold
    updated = 75 bold
    changed = 129 bold
    untracked = 226 bold
    branch = white bold reverse
    nobranch = red bold
    localBranch = 48 bold
    remoteBranch = 204 bold
    unmerged = 196 bold reverse

[color "interactive"]
    prompt = 123 bold reverse
    header = 15
    help = 214
    error = 196 bold reverse
