set editing-mode vi

# quick debugging shortcuts for gdb (other apps do not use functional keys in readline mode anyway)
$if Gdb

    # <M-?>
    "\e?": "info locals\n"

    # <F1>
    # "\eOP": "info locals\n"

    # <F2>
    "\eOQ": "info args\n"

    # <F3>
    "\eOR": "info frame\n"

    # <F4>
    "\eOS": "info registers\n"

    # <M-;>
    "\e;": "next\n"

    # <F5>
    "\e[15~": "next\n"

    # <M-:>
    "\e:": "nexti\n"

    # <M-'>
    "\e'": "step\n"

    # <F6>
    "\e[17~": "step\n"

    # <M-">
    "\e\"": "stepi\n"

    # <M-,>
    "\e,": "finish\n"

    # <F7>
    "\e[18~": "finish\n"

    # <M-.>
    "\e.": "continue\n"

    # <F8>
    "\e[19~": "continue\n"

    # <F9>
    "\e[20~": "break "

    # <F10>
    "\e[21~": "delete breakpoint "

    # <F11>
    "\e[23~": "info breakpoints\n"

    # <F12>
    "\e[24~": "run\n"

$endif # Gdb
