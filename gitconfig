[alias]
    ; display all configured aliases
    alias = config --get-regexp 'alias.*'

    ; invoke text editor on global git configuration file (most likely this one)
    edit-config = config --global --edit

    s = status -sb

    stat = diff --stat

    sl = stash list
    ss = stash save
    sp = stash pop
    sa = stash apply

    g = grep

    ; search git history to find the specified string in changes
    h = log -S
    ; search git history to find the specified regexp in changes
    hr = log -G

    l = log --color --decorate --graph --date=iso --pretty=format:"%C(green)%h\\ %ai%C(yellow)%d\\ %Creset%s%C(blue)\\ [%an\\ <%ae>]"
    ll = !git l --numstat

    ; show only the list of file names in the latest commit
    ln1 = log --pretty="format:" --name-only -1

    ; show only names of changed files: in working directory
    dn = diff --name-only
    ; show only names of changed files: in staged area
    dns = diff --name-only --staged
    ; show only names of changed files: both staged and unstaged
    dna = diff --name-only HEAD

    ; diff unstaged files (including submodules)
    d = diff --submodule=diff
    ; diff staged files (including submodules)
    ds = diff --submodule=diff --staged
    ; diff all changes (staged and not yet) (including submodules)
    da = diff --submodule=diff HEAD

    ; diff unstaged files (including submodules) using difftool
    dt = difftool -t nvim --submodule=diff
    ; diff staged files (including submodules) using difftool
    dts = difftool -t nvim --submodule=diff --staged
    ; diff all changes (staged and not yet) (including submodules) using difftool
    dta = difftool -t nvim --submodule=diff HEAD

    show-merge-conflicts = diff --name-only --diff-filter=U

    mt = mergetool -t nvim

    co = checkout
    cob = checkout -b

    bn = "!git rev-parse --abbrev-ref HEAD"
    bu = branch --set-upstream-to
    bd = branch --delete

    ri = rebase --interactive
    ra = rebase --abort
    rc = rebase --continue

    ap = add --patch
    au = add --update
    aup = add --update --patch

    ; add and commit in a single step
    ac = !git add -u && git commit -ev

    c = commit -ev
    csq = commit -evm 'FIXME squash this'
    cam = commit --amend --verbose

    ; undo the latest commit
    u1 = reset --hard HEAD~1

    ; unstage files, unstage all without arguments
    u = reset HEAD

    ; revert a file
    rv = checkout --

    pf = push --force-with-lease
    pu = push --set-upstream

    last-tag = describe --tags --abbrev=0

[core]
    pager = less -F -X

[pager]
    status = false

[credential]
    helper = cache

[grep]
    lineNumber = true

[tig]
    git-colors = yes
    show-changes = true
    tab-size = 4
    ignore-space = all
    wrap-lines = yes
    editor-line-number = yes
    mouse = yes

[tig "color"]
    default = 252 0
    cursor = 226 238 bold
    title-focus = 15 20 bold
    title-blur = 7 17
    date = 51 default
    file = 49 default
    directory = 47 default
    line-number = 227 default
    search-result = 24 226 bold
    diff-stat = 51 default
    diff-header = 226 25 bold
    diff-index = 245 default
    diff-chunk = magenta default
    status = 49 default
    stat-staged = 47 default
    stat-unstaged = 190 default
    stat-untracked = 197 default

[diff]
    submodule = log
    ; tool = vimdiff
    tool = nvim
    guitool = meld

[difftool]
    prompt = true

[difftool "nvim"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

[difftool "meld"]
    cmd = meld "$LOCAL" "$REMOTE"

[merge]
    ; tool = vimdiff
    tool = nvim
    guitool = meld
    conflictstyle = diff3

[mergetool]
    prompt = true

[mergetool "nvim"]
    ; cmd = nvim -f -c \"Gdiff\" \"$MERGED\"
    cmd = nvim -d -c 'wincmd J' "$MERGED" "$LOCAL" "$BASE" "$REMOTE"

[mergetool "meld"]
    cmd = meld "$LOCAL" "$BASE" "$REMOTE" --output "$MERGED"

[gitweb]
    blame = true

[color]
    ui = auto
    branch = auto
    grep = auto
    diff = auto
    status = auto
    interactive = auto
    pager = true

