# order += "load"
order += "memory"
order += "disk /home"
order += "disk /"
order += "tztime local"
order += "volume master"
order += "battery all"

wireless _first_ {
    format_up = "W %ip (%essid %quality %bitrate)"
    format_down = "W ---"
}

ethernet _first_ {
    format_up = "E %ip (%speed)"
    format_down = "E ---"
}

