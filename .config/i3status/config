general {
    interval = 5
    # use 'term' for debugging on tty
    output_format = "i3bar"

    colors = true
    color_good = "#00FF00"
    color_degraded = "#FFFF00"
    color_bad = "#FF0000"
}

# order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "cpu_usage"
