# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
    interval = 5
    # use 'term' for debugging on tty
    output_format = "i3bar"

    colors = true
    color_good = "#00FF00"
    color_degraded = "#FFFF00"
    color_bad = "#FF0000"
}

order += "read_file hostname"
# order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "cpu_usage"
order += "cpu_temperature 0"
# order += "load"
order += "memory"
order += "disk /home"
order += "disk /"
order += "tztime local"
order += "volume master"
order += "battery all"

read_file hostname {
    path = "/etc/hostname"
}

wireless _first_ {
    format_up = "W %ip %essid %quality %bitrate"
    format_down = "W --"
}

ethernet _first_ {
    format_up = "E %ip %speed"
    format_down = "E --"
}

cpu_usage {
    format = "♥ %usage"
    degraded_threshold = 50
    format_above_degraded_threshold =  "‼ ♥ %usage"
    max_threshold = 80
    format_above_threshold = "‼ ♥ %usage"

    separator = false
    separator_block_width = 8
}

cpu_temperature 0 {
    path = "/sys/class/thermal/thermal_zone0/temp"
    format = "%degrees°C"
    max_threshold = 75
    format_above_threshold =  "‼ %degrees°C"
}

load {
    format = "Load %1min %5min %15min"
}

memory {
    format = "M %free"
    threshold_degraded = "1Gi"
    threshold_critical = "512Mi"
    format_degraded = "‼ M %free"
}

disk "/home" {
    format = "☉ ~ %avail"
    low_threshold = 2
    threshold_type = gbytes_avail
    format_below_threshold = "‼ ☉ ~ %avail"

    separator = false
    separator_block_width = 8
}

disk "/" {
    format = "☉ / %avail"
    low_threshold = 2
    threshold_type = gbytes_avail
    format_below_threshold = "‼ ☉ / %avail"
}

volume master {
    format = "♪ %volume"
    format_muted = "♪ %volume (MUTED)"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

tztime local {
    format = "%a %Y-%m-%d %H:%M:%S"
}

battery all {
    path = "/sys/class/power_supply/BAT%d/uevent"

    format = "B%status %percentage %remaining %consumption ∅ %emptytime"
    format_down = "⚡AC"

    status_chr = "^"
    status_bat = ":"
    status_unk = "?"
    status_full = "F"

    low_threshold = 10
    threshold_type = percentage
}
