{
    "editor.fontFamily": "'Inconsolata', 'Consolas', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontSize": 14,
    "editor.renderWhitespace": "none",
    "editor.renderControlCharacters": true,
    "workbench.colorCustomizations": {
        "editor.background": "#000000"
    },
    "workbench.colorTheme": "Dark Atom Dark Green Cursor",
    "vim.incsearch": true,
    "vim.hlsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.leader": "\\",
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [ "H" ],
            "after": [ "^" ]
        },
        {
            "before": [ "L" ],
            "after": [ "$" ]
        },
        {
            "before": [ "leader", "H" ],
            "after": [ "H" ]
        },
        {
            "before": [ "leader", "L" ],
            "after": [ "L" ]
        },
        {
            "before": [ "Q" ],
            "commands": [ ":qa" ]
        },
        {
            "before": [ "S" ],
            "commands": [ ":wa" ]
        },
    ],
}