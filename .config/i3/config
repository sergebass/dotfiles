# i3 config file (v4)
#
# Please see https://i3wm.org/docs/userguide.html for a complete reference!

# Much of the configuration is shared between i3 and sway, so avoid duplication.
include ../shared-i3-and-sway-config

# Provide a simple menu to request a logout/exit, reboot or a poweroff
mode "E[x]it, [r]eboot, [p]oweroff ?" {
    bindsym x exec i3-msg exit
    bindsym r exec systemctl reboot
    bindsym p exec systemctl poweroff

    bindsym Escape mode "default"
    bindsym Return mode "default"
    bindsym $mod+Shift+e mode "default"
}

bindsym $mod+Shift+e mode "E[x]it, [r]eboot, [p]oweroff ?"

# Quickly lock screen
bindsym $mod+z exec i3lock --color 000000 --show-keyboard-layout --indicator-caps-lock --show-failed-attempts

# Screenshot taking

# Take screenshot of the entire display
bindsym $mod+Print exec scrot --pointer --exec 'lximage-qt $f' screenshot--%Y-%m-%d-%H-%M-%S.png
bindsym $mod+p exec scrot --pointer --exec 'lximage-qt $f' screenshot--%Y-%m-%d-%H-%M-%S.png

# Take screenshot of the focused window
bindsym $mod+shift+Print exec scrot --focused --pointer --exec 'lximage-qt $f' screenshot--%Y-%m-%d-%H-%M-%S.png
bindsym $mod+shift+p exec scrot --focused --pointer --exec 'lximage-qt $f' screenshot--%Y-%m-%d-%H-%M-%S.png

# Configure desktop background - first a solid color and then attempt to pick a wallpaper
exec --no-startup-id xsetroot -solid '#002020' -cursor_name left_ptr
exec --no-startup-id feh --bg-max --randomize --recursive --draw-filename ~/wallpapers/ &

